                        <form action="/productos/editar/<%= producto.id %>" method="POST">
                            <input type="text" name="nombreProducto" placeholder="Nombre" value="<%= producto.nombreProducto %>">
                            <input type="text" name="descripcionProducto" placeholder="Descripci贸n" value="<%= producto.descripcionProducto %>">
                            <input type="number" name="precio" placeholder="Precio" value="<%= producto.precio %>">
                            <button type="submit">Editar</button>
                        </form>
                        <form action="/productos/eliminar/<%= producto.id %>" method="POST">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h2>Agregar Producto</h2>
    <form action="/productos/agregar" method="POST">
        <input type="text" name="nombreProducto" placeholder="Nombre">
        <input type="text" name="descripcionProducto" placeholder="Descripci贸n">
        <input type="number" name="precio" placeholder="Precio">
        <button type="submit">Agregar</button>
    </form>
</body>
</html>
