}

nav .search_box span{
    color: maroon;
    font-size: 20px;
    background: white;
    height: 100%;
    padding: 8px;
    position: relative;
    cursor: pointer;
    z-index: 1;
}


nav .search_box span::after{
    height: 100%;
    width: 0%;
    content: " ";
    background:orange;
    position:absolute;
    top: 0;
    left: 0;
    z-index: -1;
    transition: 0.3s;
}

nav .search_box span:hover:after{
width: 100%;
}

nav .bar {
    position:relative;
    margin: auto;
    display: none;
}

nav.bar span{
    position: absolute;
    color: #fff;
    font-size: 35px;
}


