    <style>
        /* Reset */
        /* General Styles */
        body {
            font-family: 'Poppins', Arial, sans-serif;
            color: #333;
            line-height: 1.6;
            scroll-behavior: smooth;
        }
    
        a {
            text-decoration: none;
        }
    
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
    
        nav {
            display: flex;
            width: 100%;
            background: #FF7F32;
            position: relative;
            justify-content: space-between;
            text-align: center;
            padding: 15px 30px;
        }
    
        nav .icon {
            font-size: 30px;
            font-weight: 800;
            color: aliceblue;
            cursor: pointer;
        }
    
        nav ol {
            display: flex;
            list-style: none;
            margin: auto 0;
        }
    
        nav ol li {
            margin: 0 2px;
        }
    
        nav ol li a {
            color: aliceblue;
            font-size: 20px;
            text-decoration: none;
            text-transform: capitalize;
            letter-spacing: 1px;
            padding: 5px 10px;
        }
    
        nav ol li:hover a {
            background: #fff;
            color: #0a5071;
        }
    
        /* Submenu Styles */
        nav ol li ul {
            display: none;
            position: absolute;
            background-color: rgba(255, 0, 0, 0.9);
            padding: 10px;
            margin-top: 10px;
            list-style: none;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease-in-out;
        }
    
        nav ol li:hover ul {
            display: block;
        }
    
        nav ol li ul li {
            margin: 10px 0;
        }
    
        nav ol li ul li a {
            padding: 8px 20px;
            font-size: 18px;
            display: block;
            border-radius: 4px;
            transition: background-color 0.3s ease-in-out;
        }
    
        nav ol li ul li a:hover {
            background-color: #fff;
            color: #0a5071;
        }
    
        /* Search Box */
        nav .search_box {
            display: flex;
            margin: auto 0;
            height: 35px;
            line-height: 35px;
        }
    
        nav .search_box input {
            border: none;
            outline: none;
            background: #fff;
            height: 100%;
            padding: 0 10px;
            font-size: 20px;
            width: 350px;
        }
    
        nav .search_box span {
            color: maroon;
            font-size: 20px;
            background: white;
            height: 100%;
            padding: 8px;
            position: relative;
            cursor: pointer;
            z-index: 1;
        }
    
        nav .search_box span::after {
            height: 100%;
            width: 0%;
            content: " ";
            background: orange;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
            transition: 0.3s;
        }
    
        nav .search_box span:hover:after {
            width: 100%;
        }
    
        /* Hero Section with Slideshow */
        .hero {
            position: relative;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            overflow: hidden;
        }
    
        .hero .slideshow {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }
    
        .hero .slideshow img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            animation: slideShow 15s infinite;
        }
    
        @keyframes slideShow {
            0% { opacity: 0; }
            20% { opacity: 1; }
            40% { opacity: 1; }
            60% { opacity: 0; }
            100% { opacity: 0; }
        }
    
        .hero-content {
            max-width: 600px;
            animation: fadeIn 2s ease;
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 10px;
        }
    
        .hero h1 {
            font-size: 3.5em;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
        }
    
        .hero p {
            font-size: 1.5em;
            margin-bottom: 30px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
        }
    
        .hero button {
            padding: 10px 20px;
            font-size: 1em;
            color: #FF7F32;
            background-color: #fff;
            border: 2px solid #FF7F32;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }
    
        .hero button:hover {
            background-color: #FF7F32;
            color: #fff;
            transform: scale(1.1);
        }
    
        /* Services Section */
        .services {
            padding: 50px 20px;
            text-align: center;
            background-color: #f9f9f9;
        }
    
        .services h2 {
            color: #FF7F32;
            margin-bottom: 20px;
        }
    
        .service-item {
            display: inline-block;
            text-align: left;
            width: 250px;
            margin: 15px;
            padding: 20px;
            border-radius: 10px;
            background: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }
    
        .service-item i {
            font-size: 2em;
            color: #FF7F32;
            margin-bottom: 10px;
        }
    
        .service-item:hover {
            transform: translateY(-5px);
        }
    
        /* Floating WhatsApp Button */
        .whatsapp-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #25D366;
            color: white;
            font-size: 1.5em;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 10;
            transition: transform 0.3s;
        }
    
        .whatsapp-btn:hover {
            transform: scale(1.1);
        }
    
        /* Footer */
        footer {
            background-color: #333;
            color: white;
            padding: 20px;
            text-align: center;
            font-size: 1em;
        }
    
        footer a {
            color: #FF7F32;
            text-decoration: none;
        }
    
        footer a:hover {
            text-decoration: underline;
        }
    
        /* Floating Social Buttons */
        .social-btn {
            position: fixed;
            bottom: 90px;
            right: 20px;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5em;
            color: white;
            border-radius: 50%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 10;
            transition: transform 0.3s, opacity 0.3s;
        }
    
        .social-btn:hover {
            transform: scale(1.1);
        }
    
        .facebook-btn { bottom: 90px; background-color: #4267B2; }
        .instagram-btn { bottom: 160px; background-color: #C13584; }
        .whatsapp-btn { background-color: #25D366; }
    
        /* Responsive Styles */
        @media (max-width: 768px) {
            nav {
                flex-direction: column;
                padding: 10px 20px;
            }
    
            nav ol {
                flex-direction: column;
                align-items: center;
            }
    
            nav ol li {
                margin: 5px 0;
            }
    
            .hero h1 {
                font-size: 2.5em;
            }
    
            .hero p {
                font-size: 1.2em;
            }
    
            .hero button {
                padding: 8px 15px;
            }
    
            .services {
                padding: 30px 10px;
            }
    
            .service-item {
                width: 200px;
                margin: 10px;
            }
    
            .whatsapp-btn,
            .social-btn {
                width: 50px;
                height: 50px;
                font-size: 1.2em;
            }
        }
    
        @media (max-width: 480px) {
            nav .search_box input {
                width: 100%;
                font-size: 18px;
            }
    
            .hero h1 {
                font-size: 2em;
            }
    
            .hero p {
                font-size: 1em;
            }
    
            .hero button {
                padding: 8px 12px;
            }
    
            .service-item {
                width: 180px;
                margin: 8px;
            }
    
            .whatsapp-btn,
            .social-btn {
                width: 45px;
                height: 45px;
                font-size: 1.2em;
            }
        }
    </style>
    
